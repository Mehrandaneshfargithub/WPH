                    @(Html.Kendo().AutoComplete()
                          .Name("template")
                          .DataTextField("Name")
                          .Events(events => events.Select("selectTemplate"))
                          .Filter("contains")
                          .HighlightFirst(true)
                          .ClearButton(false)
                          .HtmlAttributes(new { style = "width: 100%;" })
                          .DataSource(source =>
                          {
                              source.Read(read =>
