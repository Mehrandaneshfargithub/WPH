
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@inject WPH.Resources.SharedViewLocalizer Localizer

@{
    string font = "", pull = "", direction = "";
    if (HttpContextAccessor.HttpContext.Session.GetString("culture") == "en")
    {
        font = " MyFont-Roboto-grid ";
        pull = " pull-left ";
        direction = " ";
    }
    else
    {
        font = " MyFont-Sarchia-grid ";
        pull = " pull-right ";
        direction = " direction:rtl; ";
    }
}

<div class="row page-header ">
    <div class="@pull ">
        <h1 class="@font" style="font-size: 2.3rem">
            @Localizer["Doctor"]
        </h1>

    </div>

    @if ((bool)ViewBag.AccessNewSubDoctor)
    {
        <div class="@font @pull" style="margin:0 2rem;transform:translateY(-10%)">
            <a class="btn btn-danger" onClick="AddDoctor(this)" href="#" style="padding:0.2rem">
                @Localizer["New"]
                <i class="ace-icon glyphicon  glyphicon-plus align-top bigger-125"></i>
            </a>
        </div>
    }
</div><!-- /.page-header -->


<div class="row Grid-Content @font">
    @await Html.PartialAsync("~/Views/Shared/PartialViews/AppWebForms/Doctor/dgDoctorGrid.cshtml")
</div>

@await Html.PartialAsync("~/Views/Shared/PartialViews/InterfacePartials/_GridAndModalLinks.cshtml")
@await Html.PartialAsync("~/Views/Shared/PartialViews/InterfacePartials/_Modal.cshtml")


<div id="DoctorModal" class="modal fade @font" data-backdrop="static" data-keyboard="false" style="@direction">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="closeDoctorModal()" aria-hidden="true">&times;</button>
                <h3 id="DoctorModal-header" class="smaller lighter blue no-margin @font">
                    @Localizer["Unit"] @Localizer["New"]
                </h3>
            </div>
            <div id="DoctorModal-body" class="modal-body">
            </div>

            <div id="ERROR_Data" class="red label-white middle hidden" style="height:40px;display:block">
                <i class="ace-icon fa fa-stop bigger-120"></i>
                @Localizer["ERROR_DataNotValid"]
            </div>

            <div id="ERROR_SomeThingWentWrong" class="red label-white middle hidden" style="height:40px;display:block">
                <i class="ace-icon fa fa-stop bigger-120"></i>
                @Localizer["ERROR_InsertWrong"]
            </div>

            <div class="modal-footer">
                @(Html.Kendo().Button()
                    .Name("btn-DoctorModal-accept")
                    .HtmlAttributes(new { style = "font-size:15px;height:35px;margin:2px;", type = "button", @class = "k-primary pull-right" })
                    .Content(Localizer["Ok"]))
                @(Html.Kendo().Button()
                    .Name("btn-DoctorModal-close")
                    .HtmlAttributes(new { style = "font-size:15px;height:35px;margin:2px;", type = "button", @class = "pull-right", onclick = "closeDoctorModal()" })
                    .Content(Localizer["Exit"]))
            </div>
        </div>
    </div>
</div>

<div id="DoctorLogoModal" class="modal fade @font" data-backdrop="static" data-keyboard="false" style="@direction">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="closeDoctorLogoModal()" aria-hidden="true">&times;</button>
                <h3 id="DoctorLogoModal-header" class="smaller lighter blue no-margin @font">
                    @Localizer["DoctorReportLogo"]
                </h3>
            </div>
            <div id="DoctorLogoModal-body" class="modal-body">
            </div>

            <div id="ERROR_SomeThingWentWrong" class="red label-white middle hidden" style="height:40px;display:block">
                <i class="ace-icon fa fa-stop bigger-120"></i>
                @Localizer["ERROR_InsertWrong"]
            </div>

            <div id="ImageNotSelected" class="red label-white middle hidden" style="height:40px;display:block">
                <i class="ace-icon fa fa-stop bigger-120"></i>
                @Localizer["ImageNotSelected"]
            </div>

            <div class="modal-footer">
                @(Html.Kendo().Button()
                    .Name("btn-DoctorLogoModal-accept")
                    .HtmlAttributes(new { style = "font-size:15px;height:35px;margin:2px;", type = "button", @class = "k-primary pull-right" })
                    .Content(Localizer["Ok"]))
                @(Html.Kendo().Button()
                    .Name("btn-DoctorLogoModal-close")
                    .HtmlAttributes(new { style = "font-size:15px;height:35px;margin:2px;", type = "button", @class = "pull-right", onclick = "closeDoctorLogoModal()" })
                    .Content(Localizer["Exit"]))
                @(Html.Kendo().Button()
                    .Name("btn-DoctorLogoModal-delete")
                    .HtmlAttributes(new { style = "font-size:15px;height:35px;margin:2px;", type = "button", @class = "btn btn-danger pull-right" })
                    .Content(Localizer["Delete"]))
            </div>
        </div>
    </div>
</div>

<h3 id="newHeader" class="hidden"> @Localizer["Doctor"] - @Localizer["New"] </h3>

<script>

    function ConvertToUser(element) {
        $(".loader").removeClass("hidden");

        var Id = $(element).attr('data-id');
        $.ajax({
            type: "Post",
            url: `/Doctor/ConvertDoctorToUser/${Id}`,
            //data: data,
            success: function (response) {
                if (response !== 0) {
                    if (response === "AccessDenied") {

                        bootbox.alert({
                            message: "AccessDenied",
                            className: 'bootbox-class'
                        });

                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");

                    } else if (response === "NotFound") {

                        bootbox.alert({
                            message: "NotFound",
                            className: 'bootbox-class'
                        });

                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");

                    } else if (response === "true") {

                        var span = $(element).find('span');
                        span.addClass("green");
                        span.removeClass("grey");

                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");

                    } else {
                        var span = $(element).find('span');
                        span.addClass("grey");
                        span.removeClass("green");

                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");
                        //$("#kendoDoctorGrid .k-pager-refresh")[0].click();

                    }
                } else {

                    bootbox.alert({
                        message: '@Localizer["ERROR_InsertWrong"]',
                        className: 'bootbox-class'
                    });

                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                }
            }
        });
    }

    function AddDoctor(e) {
        $("#DoctorModal #ERROR_Data").addClass("hidden");
        $("#DoctorModal #ERROR_SomeThingWentWrong").addClass("hidden");
        $("#Mobile-wrong").addClass('hidden');

        let header = $("#newHeader").text();
        var link = $("#GridAddLink").attr("data-Value");

        $('#DoctorModal-header').text(header);

        $(".loader").removeClass("hidden");
        $('#DoctorModal').modal('toggle');
        $('#DoctorModal-body').load(link, function () {
            $(".loader").fadeIn("slow");
            $(".loader").addClass("hidden");
        });
    }


    $('#btn-DoctorModal-accept').on("click", function () {
        $(this).attr("disabled", true);

        $("#DoctorModal #ERROR_Data").addClass("hidden");
        $("#DoctorModal #ERROR_SomeThingWentWrong").addClass("hidden");
        $("#Mobile-wrong").addClass('hidden');

        var mobile = $("#Mobile-wrong");
        if (mobile) {
            mobile.addClass("hidden");

            if ($('[validate-mobile="Mobile-wrong"]').val() !== undefined) {
                let text = $('[validate-mobile="Mobile-wrong"]').val();
                if (text != "" & text.trim().length < 8) {
                    mobile.removeClass("hidden");
                    $('#btn-DoctorModal-accept').removeAttr("disabled");
                    return;
                }
            }
        }

        $('.emptybox').addClass('hidden');
        var isEmmpty = true;
        $('.emptybox').each(function () {
            if ($(this).attr('data-isEssential') === 'true') {
                var empty = $(this).attr('id');
                if ($('[data-checkEmpty="' + empty + '"]').val() !== undefined) {
                    let text = $('[data-checkEmpty="' + empty + '"]').val().replace(/ /g, '');
                    if (text === "") {
                        $(this).removeClass('hidden');
                        $('#btn-DoctorModal-accept').removeAttr("disabled");
                        isEmmpty = false;
                        return;
                    }
                }
            }
        });

        if (isEmmpty === false) {
            return;
        }

        var data = $("#addNewDoctorForm").serialize();
        var link = $("#AddNewLink").attr("data-Value");


        $(".loader").removeClass("hidden");
        $.ajax({
            type: "Post",
            url: link,
            data: data,
            success: function (response) {
                $('#btn-DoctorModal-accept').removeAttr("disabled");

                if (response !== 0) {
                    if (response === "ValueIsRepeated") {

                        $('#Name-Exist').removeClass('hidden');

                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");
                    } else if (response === "DataNotValid") {

                        $("#DoctorModal #ERROR_Data").removeClass("hidden");
                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");

                    } else if (response === "WrongMobile") {

                        $("#Mobile-wrong").removeClass('hidden');

                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");
                    } else {

                        $('#DoctorModal').modal('hide');
                        $(".modal-backdrop:last").remove();
                        $('#DoctorModal-body').empty();
                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");
                        $(".k-pager-refresh")[0].click();
                    }
                } else {

                    $("#DoctorModal #ERROR_SomeThingWentWrong").removeClass("hidden");
                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                }
            }
        });
    });


    function closeDoctorModal() {
        $('#DoctorModal').modal('toggle');
        $('#DoctorModal-body').empty();
    }

    function SetDoctorReportLogo(element) {

        $("#DoctorLogoModal #ERROR_SomeThingWentWrong").addClass("hidden");
        $("#DoctorLogoModal #ImageNotSelected").addClass("hidden");

        var link = "/Doctor/DoctorReportLogoModal/";
        var Id = $(element).attr('data-id');


        $(".loader").removeClass("hidden");
        $('#DoctorLogoModal').modal('toggle');
        $('#DoctorLogoModal-body').load(link + Id, function () {
            $(".loader").fadeIn("slow");
            $(".loader").addClass("hidden");
        });

    }


    function closeDoctorLogoModal() {
        $('#DoctorLogoModal').modal('toggle');
        $('#DoctorLogoModal-body').empty();
    }


    $('#btn-DoctorLogoModal-accept').on("click", function () {
        $(this).attr("disabled", true);

        $("#DoctorLogoModal #ERROR_SomeThingWentWrong").addClass("hidden");
        $("#DoctorLogoModal #ImageNotSelected").addClass("hidden");

        var _formData = new FormData();

        var token = $(':input:hidden[name*="RequestVerificationToken"]');

        _formData.append('__RequestVerificationToken', token.attr('value'));
        _formData.append('doctorId', $("#DoctorLogoModal #Guid").val());

        var src = $("#ReportLogo").attr('src');
        if (src) {
            var file = dataURLtoFile(src, $("#ReportLogo").attr('name'));
            _formData.append('reportLogo', file);
        }


        $(".loader").removeClass("hidden");

        $.ajax({

            type: "Post",
            contentType: "multipart/form-data",
            dataType: "json",
            data: _formData,
            processData: false,
            contentType: false,
            url: "/Doctor/SaveDoctorReportLogo",
            success: function (response) {
                if (response !== 0) {
                    $('#btn-DoctorLogoModal-accept').removeAttr("disabled");

                    if (response === "ImageNotSelected") {
                        $("#DoctorLogoModal #ImageNotSelected").removeClass("hidden");

                    } else {
                        $('#DoctorLogoModal').modal('hide');
                        $(".modal-backdrop:last").remove();
                        $('#DoctorLogoModal-body').empty();
                    }
                } else {
                    $("#DoctorLogoModal #ERROR_SomeThingWentWrong").removeClass("hidden");
                }

                $(".loader").fadeIn("slow");
                $(".loader").addClass("hidden");
            },

        })
    });



    $('#btn-DoctorLogoModal-delete').on("click", function () {
        $(this).attr("disabled", true);

        $("#DoctorLogoModal #ERROR_SomeThingWentWrong").addClass("hidden");
        $("#DoctorLogoModal #ImageNotSelected").addClass("hidden");

        var link = "/Doctor/RemoveDoctorReportLogo";
        var token = $(':input:hidden[name*="RequestVerificationToken"]');
        var doctorId = $("#DoctorLogoModal #Guid").val();

        $(".loader").removeClass("hidden");

        $.ajax({
            type: "Post",
            url: link,
            data: {
                __RequestVerificationToken: token.attr('value'),
                doctorId: doctorId
            },
            success: function (response) {
                $('#btn-DoctorLogoModal-delete').removeAttr("disabled");

                if (response !== 0) {

                    $(`#DoctorLogoModal #ReportLogo`).attr('src', '');
                    $(`#DoctorLogoModal #ReportLogo`).attr('name', '');
                    $("#logoFile").val('');

                } else {

                    $("#DoctorLogoModal #ERROR_SomeThingWentWrong").removeClass("hidden");
                }

                $(".loader").fadeIn("slow");
                $(".loader").addClass("hidden");
            },

        })
    });



</script>