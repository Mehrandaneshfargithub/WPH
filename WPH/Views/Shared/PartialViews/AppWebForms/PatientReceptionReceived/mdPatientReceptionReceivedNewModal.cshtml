
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@inject WPH.Resources.SharedViewLocalizer Localizer


<div id="signup-box" class="signup-box no-border @if (HttpContextAccessor.HttpContext.Session.GetString("culture") == "en") {
                                                                                    @:MyFont-Roboto-grid
                                                                                  } else {
                                                                                    @:MyFont-Sarchia-grid
                                                                                        }">
    <div class="widget-body">
        <div class="widget-main">
            <form id="addNewFormPatientReceptionReceived">
                <fieldset>
                    <label class="block clearfix">
                        <label for="form-field-8">@Localizer["Currency"]: </label>
                        <span class="block input-icon input-icon-right">
                            @(Html.Kendo().NumericTextBox<decimal>()
                                .Name("PatientReceptionReceivedAmount")
                                .Format("#.00 ")
                                .HtmlAttributes(new { style = "width: 100%", id = "PatientReceptionReceivedAmount" })
                            )
                        </span>
                        <span id="PatientReceptionReceivedAmount-box" class="emptybox hidden" data-isEssential="true" style="color:red;">
                            @Localizer["ThisFieldIsEmptyPleaseFillIt"]
                        </span>

                    </label>


                    <label class="block clearfix">
                        <label for="form-field-8">@Localizer["Type"] @Localizer["Currency"] : </label>
                        <span class="block input-icon input-icon-right">
                            @(Html.Kendo().DropDownList()
                                  .Name("PatientReceptionReceivedAmountCorrencyId")
                                  .DataTextField("Name")
                                  .DataValueField("Id")
                                  .DataSource(source =>
                                    {
                                      source.Read(read =>
                                      {
                                          read.Action("GetAllCurrencies", "BaseInfo");
                                      })
                                      .ServerFiltering(false);
                                  })
                                  .HtmlAttributes(new { style = "width: 100%;", id = "PatientReceptionReceivedAmountCorrencyId" })
                            )
                        </span>
                    </label>
                    <div class="space-24"></div>
                </fieldset>
            </form>
        </div>
    </div><!-- /.widget-body -->
</div><!-- /.signup-box -->


<script>

    $(document).ready(function () {

        let amountBox = $("#PatientReceptionReceivedAmount").data("kendoNumericTextBox");
        setTimeout(function () {
            amountBox.focus();
        }, 200);



    });



    $('#Amount').focus(function () {
        $("#Name-Exist").addClass('hidden');
        $("#Name-box").addClass('hidden');
    });




</script>

