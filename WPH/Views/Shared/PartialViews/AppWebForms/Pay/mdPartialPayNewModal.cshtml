                    }

                    return true;
                });
                $("#PayedAmount").val(sum);

                let total = $("#TotalAmount").val();
                let rem = total - sum;
                $("#RemAmount").val(rem);

                $("#partialPayHistoryKendoGrid").data("kendoGrid").setDataSource(response);
            }
        });
    }

