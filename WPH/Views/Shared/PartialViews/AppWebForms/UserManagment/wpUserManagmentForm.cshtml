@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@inject WPH.Resources.SharedViewLocalizer Localizer


@{
    string font = "", pull = "", direction = "";
    if (HttpContextAccessor.HttpContext.Session.GetString("culture") == "en")
    {
        font = " MyFont-Roboto-grid ";
        pull = " pull-left ";
        direction = " ";
        <h3 id="newUserText" class="hidden">@Localizer["New"] @Localizer["User"]</h3>
    }
    else
    {
        font = " MyFont-Sarchia-grid ";
        pull = " pull-right ";
        direction = " direction:rtl; ";
        <h3 id="newUserText" class="hidden">@Localizer["User"] @Localizer["New"]</h3>
    }

    <h3 id="UserAccesText" class="hidden">@Localizer["UserAccess"]</h3>
}

<style>


    @@media (max-width:767px){
               .modal-dialog{width:70vw;margin:30px auto}
               .modal-content{-webkit-box-shadow:0 5px 15px rgba(0,0,0,.5);box-shadow:0 5px 15px rgba(0,0,0,.5)}
               .modal-sm{width:300px}
        #Access-modal-body {
            width: 90vw;
        }



    }

    @@media (min-width:768px) {
        #Access-modal-body {
            width: 40vw;
        }
    }


</style>

<div class="row page-header ">

    <div class="@pull ">
        <h1 class="@font" style="font-size: 2.3rem">
            @Localizer["UserManagement"]
        </h1>

    </div>

    @if ((bool)ViewBag.AccessNewUser)
    {
        <div class="@pull @font " style="margin:0 2rem;transform:translateY(-10%)">
            <a class="btn btn-danger" onClick="Adduser(this)" href="#" style="padding:0.2rem">
                @Localizer["New"]
                <i class="ace-icon glyphicon  glyphicon-plus align-top bigger-125"></i>
            </a>
        </div>
    }

    @if ((bool)ViewBag.AccessUserPortion)
    {
        <div class="@pull @font " style="margin:0 2rem;transform:translateY(-10%)">
            <a class="btn btn-danger" onClick="userPortion()" href="#" style="padding:0.2rem">
                @Localizer["UserPortion"]
                <i class="ace-icon glyphicon  glyphicon-plus align-top bigger-125"></i>
            </a>
        </div>
    }



</div><!-- /.page-header -->




<div class="row Grid-Content @font">
    @await Html.PartialAsync("~/Views/Shared/PartialViews/AppWebForms/UserManagment/dgUserManagmentGrid.cshtml")
</div>

@await Html.PartialAsync("~/Views/Shared/PartialViews/InterfacePartials/_GridAndModalLinks.cshtml")
@await Html.PartialAsync("~/Views/Shared/PartialViews/InterfacePartials/_Modal.cshtml")


<input class="hidden" type="text" id="AccessLink" data-Value="@ViewBag.AccessLink" />

<div id="my-modal-Access" class="modal fade @font " tabindex="-1" data-backdrop="static" data-keyboard="false" style="@direction">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="closeAccessModal()" aria-hidden="true">&times;</button>
                <h3 id="Access-modal-header" class="smaller lighter blue no-margin @font">
                </h3>
            </div>

            <div id="Access-modal-body"  class="modal-body @font ">

            </div>

            <div class="modal-footer">
                @(Html.Kendo().Button()
                    .Name("btn-Access-accept")
                    .HtmlAttributes(new { style = "font-size:15px;height:35px;margin:2px;", type = "button", @class = "k-primary pull-right" })
                    .Content(@Localizer["Ok"]))
                @(Html.Kendo().Button()
                    .Name("btn-Access-close")
                    .HtmlAttributes(new { style = "font-size:15px;height:35px;margin:2px;", type = "button", @class = "pull-right", onclick = "closeAccessModal()" })
                    .Content(@Localizer["Exit"]))




            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

<div id="userPortionModal" class="modal fade @font " tabindex="-1" data-backdrop="static" data-keyboard="false" style="@direction">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="closeUserPortionModal()" aria-hidden="true">&times;</button>
                <h3 id="userPortionModal-header" class="smaller lighter blue no-margin @font">
                    @Localizer["UserPortion"]
                </h3>
            </div>

            <div id="userPortionModal-body" style="width:90vw" class="modal-body @font ">

            </div>

            <div class="modal-footer">
               
                @(Html.Kendo().Button()
                    .Name("btn-userPortionModal-close")
                    .HtmlAttributes(new { style = "font-size:15px;height:35px;margin:2px;", type = "button", @class = "pull-right", onclick = "closeUserPortionModal()" })
                    .Content(@Localizer["Exit"]))




            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>

<script>


    function closeAccessModal() {

        $('#my-modal-Access').modal('hide');
        $(".modal-backdrop:last").remove();
        $('#Access-modal-body').empty();
    }


    function Adduser(e) {

        let header = $("#newUserText").text();

        var link = $("#GridAddLink").attr("data-Value");

        $('#new-modal-header').text(header);

        $(".loader").removeClass("hidden");
        $('#my-modal-new').modal('toggle');
        $('#new-modal-body').load(link, function () {
            $(".loader").fadeIn("slow");
            $(".loader").addClass("hidden");
        });
    }

    function userPortion() {


        var link = "/UserManagment/UserPortionForm"

        $(".loader").removeClass("hidden");
        $('#userPortionModal').modal('toggle');
        $('#userPortionModal-body').load(link, function () {
            $(".loader").fadeIn("slow");
            $(".loader").addClass("hidden");
        });
    }

    function closeUserPortionModal() {

        $('#userPortionModal').modal('hide');
        $(".modal-backdrop:last").remove();
        $('#userPortionModal-body').empty();
    }

</script>