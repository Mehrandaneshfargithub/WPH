@model WPH.Models.Damage.DamageViewModel
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@inject WPH.Resources.SharedViewLocalizer Localizer

@{
    var now = DateTime.Now;
    string font = "", pull = "", pull_rev = "", dir = "", header_txt = "";
    if (HttpContextAccessor.HttpContext.Session.GetString("culture") == "en")
    {
        font = " MyFont-Roboto-grid ";
        pull = " pull-left ";
        pull_rev = " pull-right ";
        dir = "  ";
        <h3 id="NewDamageHeader" class="hidden"> @Localizer["New"] - @Localizer["Damage"] </h3>
        <h3 id="EditDamageHeader" class="hidden"> @Localizer["Edit"] - @Localizer["Damage"] </h3>
    }
    else
    {
        font = " MyFont-Sarchia-grid ";
        pull = " pull-right ";
        pull_rev = " pull-left ";
        dir = " direction:rtl; ";
        <h3 id="NewDamageHeader" class="hidden"> @Localizer["Damage"] - @Localizer["New"] </h3>
        <h3 id="EditDamageHeader" class="hidden">@Localizer["Damage"] - @Localizer["Edit"] </h3>
    }

    if (Model.Guid == Guid.Empty)
    {
        header_txt = $"{Localizer["Damage"]} _ {Localizer["New"]}";

    }
    else
    {
        header_txt = $"{Localizer["Damage"]} _ {Localizer["Edit"]}";

