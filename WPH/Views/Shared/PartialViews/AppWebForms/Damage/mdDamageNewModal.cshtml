<script>

    var product_list = [];
    var updated = false;
    var ok_exit = false;

    $(document).ready(function () {
        SetTotalPrice('@Model.TotalPrice');
        let invoice = $('#Guid').val();

        if (invoice !== null && invoice !== "" && invoice !== "00000000-0000-0000-0000-000000000000" && invoice !== undefined) {
            $('#btn-updateDamage-accept').removeClass('hidden');
            $('#btn-updateDamage-exit-accept').removeClass('hidden');
            $('#btn-DamageDetailNewModal').removeClass('hidden');
            $('#btn-ShowDiscountsList').removeClass('hidden');
            $('#btn-addDamageDamageDetail-accept').addClass('hidden');
        }

        setTimeout(function () {
            $("#InvoiceDateTxt").focus();
        }, 200);

    });

    $("#InvoiceDateTxt").parent().on("keypress", function (e) {
        if (e.which === 13) {
            $('#CostTypeTxt').data("kendoAutoComplete").focus();
        }
    });

    $("#CostTypeTxt").on("focus", function (e) {
        let reason = $('#CostTypeTxt').data("kendoAutoComplete");
        let value = reason.value();
        reason.search(value);
    });

    $('#CostTypeTxt').on('keypress', function (e) {

        if (e.which === 13) {
            $('#ReasonTxt').data("kendoAutoComplete").focus();
        }
    });

    $("#ReasonTxt").on("focus", function (e) {
        let reason = $('#ReasonTxt').data("kendoAutoComplete");
        let value = reason.value();
        reason.search(value);
    });

    $('#ReasonTxt').on('keypress', function (e) {

        if (e.which === 13) {
            $("#Description").focus();
        }
    });

    $("#Description").on("keypress", function (e) {
        if (e.which === 13) {
            if ($('#btn-addDamageDamageDetail-accept').hasClass('hidden')) {
                $('#btn-updateDamage-accept').focus();
            }
            else {
                $('#btn-addDamageDamageDetail-accept').focus();
            }
        }
    });

    $('#btn-addDamageDamageDetail-accept').on("click", function () {
        $(this).attr("disabled", true);

        $("#addNewDamageForm #CantChangeSupplier").addClass("hidden");
        $("#addNewDamageForm #ERROR_Data").addClass("hidden");
        $("#addNewDamageForm #Date-valid").addClass("hidden");
        $("#addNewDamageForm #InvoiceInUse").addClass("hidden");
        $("#addNewDamageForm #ERROR_SomeThingWentWrong").addClass("hidden");

        $('#addNewDamageForm .emptybox').addClass('hidden');
        var isEmmpty = true;
        $('.emptybox').each(function () {
            if ($(this).attr('data-isEssential') === 'true') {
                var empty = $(this).attr('id');
                if ($('[data-checkEmpty="' + empty + '"]').val() === "") {
                    $(this).removeClass('hidden');
                    isEmmpty = false;
                    $('#btn-addDamageDamageDetail-accept').removeAttr("disabled");
                    return;
                }
            }
        });

        if (isEmmpty === false) {
            return;
        }

        var link = "/Damage/AddOrUpdate";

        let damage = {
            Guid: $("#Guid").val(),
            InvoiceDateTxt: $("#InvoiceDateTxt").val(),
            CostTypeTxt: $("#CostTypeTxt").val(),
            ReasonTxt: $("#ReasonTxt").val(),
            Description: $("#Description").val(),
        };

        var data = damage;
        $(".loader").removeClass("hidden");

        $.ajax({
            type: "Post",
            url: link,
            data: data,
            success: function (response) {
                $('#btn-addDamageDamageDetail-accept').removeAttr("disabled");

                if (response !== 0) {

                    if (response === "DateNotValid") {

                        $('"#addNewDamageForm #Date-valid"').removeClass('hidden');

                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");

                    } else if (response === "InvoiceInUse") {

                        $("#addNewDamageForm #InvoiceInUse").removeClass("hidden");
                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");

                    } else if (response === "CantChangeSupplier") {

                        $("#addNewDamageForm #CantChangeSupplier").removeClass("hidden");
                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");

                    } else if (response === "DataNotValid") {

                        $("#addNewDamageForm #ERROR_Data").removeClass("hidden");
                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");

                    } else if (response === "ThereIsNoMoneyConvert") {

                        bootbox.alert({
                            message: " @Localizer["ThereIsNoMoneyConvert"]",
                            className: 'bootbox-class'
                        });
                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");

                    } else if (response.includes("YouHaveJust")) {

                        bootbox.alert({
                            message: `${response}`,
                            className: 'bootbox-class'
                        });
                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");

                    } else {

                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");

                        let guid = response.split("_");
                        $('#Guid').val(guid[0]);
                        $('#InvoiceNumTxt').val(guid[1]);

                        $('#btn-updateDamage-accept').removeClass('hidden');
                        $('#btn-updateDamage-exit-accept').removeClass('hidden');
                        $('#btn-DamageDetailNewModal').removeClass('hidden');
                        $('#btn-ShowDiscountsList').removeClass('hidden');
                        $('#btn-addDamageDamageDetail-accept').addClass('hidden');
                    }
                } else {

                    $("#addNewDamageForm #ERROR_SomeThingWentWrong").removeClass("hidden");
                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                }
            }
        });
    });


    $("#btn-ShowDiscountsList").on("click", function () {

        $("#ShowDiscountsListModal #ERROR_Data").addClass("hidden");
        $("#ShowDiscountsListModal #InvoiceInUse").addClass("hidden");
        $("#ShowDiscountsListModal #ERROR_SomeThingWentWrong").addClass("hidden");

        $('#ShowDiscountsListModal').modal('toggle');

        var link = "/DamageDiscount/Form?damageId=";
        var Id = $("#Guid").val();
