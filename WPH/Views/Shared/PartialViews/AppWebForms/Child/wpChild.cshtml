@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@inject WPH.Resources.SharedViewLocalizer Localizer

@{
    string font = "", pull = "", pull_rev = "";
    if (HttpContextAccessor.HttpContext.Session.GetString("culture") == "en")
    {
        font = " MyFont-Roboto-grid ";
        pull = " pull-left ";
        pull_rev = " pull-right ";
        <h3 id="newChildText" class="hidden">@Localizer["New"] @Localizer["Childs"]</h3>
    }
    else
    {
        font = " MyFont-Sarchia-grid ";
        pull = " pull-right ";
        pull_rev = " pull-left ";
        <h3 id="newChildText" class="hidden">@Localizer["Child"] @Localizer["New"]</h3>
    }
    <h3 id="editChildText" class="hidden">@Localizer["Edit"] @Localizer["Child"]</h3>
}

<div class="row page-header ">

    <div class="@pull">
        <h1 class="@font" style="font-size: 2.3rem">
            @Localizer["NewbornBabies"]
        </h1>

    </div>
    @if ((bool)ViewBag.AccessNewChild)
    {
        <div class="@font @pull" style="margin:0 2rem;transform:translateY(-10%)">
            <a class="btn btn-danger" onClick="AddChild(this)" href="#" style="padding:0.2rem">
                @Localizer["New"]
                <i class="ace-icon glyphicon  glyphicon-plus align-top bigger-125"></i>
            </a>
        </div>
    }

    @if ((bool)(ViewBag.AccessPrintChild ?? false))
    {
        <div class="@pull_rev" style="margin:0 2rem;transform:translateY(-10%)">
            <a class="" onClick="ShowChildReport()" style="padding:0.2rem;cursor:pointer;font-size: 20px;">
                <span>
                    <i class="ace-icon fa fa-print align-top bigger-125"></i>
                </span>
            </a>
        </div>
    }

</div><!-- /.page-header -->


<div id="AddChildModal" class="modal fade @font" data-backdrop="static" data-keyboard="false" style="@if (HttpContextAccessor.HttpContext.Session.GetString("culture") != "en") {
            @:direction:rtl
                }">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="closeAddChildModal()" aria-hidden="true">&times;</button>
                <h3 id="AddChildModal-header" class="smaller lighter blue no-margin @font">
                </h3>
            </div>

            <div id="AddChildModal-body" class="modal-body" style="width:60rem">
            </div>
            <div id="ERROR_Data" class="red label-white middle hidden" style="height:40px;display:block">
                <i class="ace-icon fa fa-stop bigger-120"></i>
                @Localizer["ERROR_DataNotValid"]
            </div>

            <div id="ERROR_SomeThingWentWrong" class="red label-white middle hidden" style="height:40px;display:block">
                <i class="ace-icon fa fa-stop bigger-120"></i>
                @Localizer["ERROR_InsertWrong"]
            </div>

            <div class="modal-footer">

                @(Html.Kendo().Button()
                .Name("btn-addChild-accept")
                .HtmlAttributes(new { style = "font-size:15px;height:35px;margin:2px;", type = "button", @class = "k-primary pull-right", onclick = "addNewChild()" })
                .Content(Localizer["Ok"]))
                @(Html.Kendo().Button()
                .Name("btn-addChild-close")
                .HtmlAttributes(new { style = "font-size:15px;height:35px;margin:2px;", type = "button", @class = "pull-right", onclick="closeAddChildModal()" })
                .Content(Localizer["Exit"]))
            </div>
        </div> @*.modal-content*@
    </div> @*.modal-dialog*@
</div>


<!-- Grid -->
<div class="row Grid-Content @font">
    @await Html.PartialAsync("~/Views/Shared/PartialViews/AppWebForms/Child/dgChildGrid.cshtml")
</div>
@await Html.PartialAsync("~/Views/Shared/PartialViews/InterfacePartials/_GridAndModalLinks.cshtml")
@await Html.PartialAsync("~/Views/Shared/PartialViews/InterfacePartials/_Modal.cshtml")


<script>
    function DateValidate(dateValue) {
        
        const elem = dateValue.split("/");

        if (elem.length != 3)
            return false;

        if (elem[0] < 1 || elem[0] > 31 || elem[0].length < 1 || elem[0].length > 2)
            return false;

        if (elem[1] < 1 || elem[1] > 12 || elem[1].length < 1 || elem[1].length > 2)
            return false;

        if (elem[2].length != 4 || elem[2].startsWith("0"))
            return false;

        return true;
    }

    function ShowChildReport() {
        $(".loader").removeClass("hidden");

        let link = "/Child/ShowReport";

        $(".page-content").load(link, function (responce) {

            $(".loader").fadeIn("slow");
            $(".loader").addClass("hidden");
        })
    }

    function AddChild(element) {
        $("#AddChildModal #ERROR_Data").addClass("hidden");
        $("#AddChildModal #Name-Exist").addClass("hidden");
        $("#AddChildModal #Date-valid").addClass("hidden");
        $("#AddChildModal #ERROR_SomeThingWentWrong").addClass("hidden");

        var link = "/Child/AddAndNewModal";
        $(".loader").removeClass("hidden");

        let header = $("#newChildText").text();

        $('#AddChildModal-header').text(header);
        $('#AddChildModal').modal('toggle');
        $('#AddChildModal-body').load(link, function () {
            $(".loader").fadeIn("slow");
            $(".loader").addClass("hidden");
        });

    }

    function EditChild(element) {
        $("#AddChildModal #ERROR_Data").addClass("hidden");
        $("#AddChildModal #Name-Exist").addClass("hidden");
        $("#AddChildModal #Date-valid").addClass("hidden");
        $("#AddChildModal #ERROR_SomeThingWentWrong").addClass("hidden");

        $('#AddChildModal').modal('toggle');
        let header = $("#editChildText").text();
        $('#AddChildModal-header').text(header);
        var link = "/Child/EditModal?Id=";
        var Id = $(element).attr('data-id');
        $(".loader").removeClass("hidden");
        $('#AddChildModal-body').load(link + Id + '', function () {
            $(".loader").fadeIn("slow");
            $(".loader").addClass("hidden");

        });

    }


    function addNewChild() {
        $("#AddChildModal #ERROR_Data").addClass("hidden");
        $("#AddChildModal #Name-Exist").addClass("hidden");
        $("#AddChildModal #Date-valid").addClass("hidden");
        $("#AddChildModal #ERROR_SomeThingWentWrong").addClass("hidden");

        //if (!DateValidate($("#DateBirth").val())) {

        //    $("#AddChildModal #Date-valid").removeClass("hidden");
        //    return;
        //}

        $('.emptybox').addClass('hidden');
        var isEmmpty = true;
        $('.emptybox').each(function () {
            if ($(this).attr('data-isEssential') === 'true') {
                var empty = $(this).attr('id');
                if ($('[data-checkEmpty="' + empty + '"]').val() === "") {
                    $(this).removeClass('hidden');
                    isEmmpty = false;
                    return;
                }
            }
        });

        if (isEmmpty === false) {
            return;
        }


        var link = "/Child/AddOrUpdate";

        var token = $(':input:hidden[name*="RequestVerificationToken"]');

        let check = "false";
        if ($("#NeedOperation").is(":checked"))
            check = "true";


        //var Child = {
        //    Guid: $("#Guid").val(),
        //    NameHolder: $("#NameHolder").val(),
        //    Name: $("#Name").val(),
        //    GenderId: $("#GenderId").val(),
        //    DateBirth: $("#DateOfBirth").val(),
        //    TimeOfBirth: $("#TimeOfBirth").val(),
        //    ChildStatus: $("#ChildStatus").val(),
        //    ChildWeight: $("#Weight").val(),
        //    VitalActivities: $("#VitalActivities").val(),
        //    CongenitalAnomalies: $("#CongenitalAnomalies").val(),
        //    NeedOperation: check,
        //    OperationOrder: $("#OperationOrder").val(),
        //};

        var Child = $("#addNewChildForm").serialize();


        $(".loader").removeClass("hidden");
        $.ajax({
            type: "Post",
            url: link,
            data: Child,
            success: function (response) {
                if (response !== 0) {
                    if (response === "ValueIsRepeated") {

                        $('#AddChildModal #Name-Exist').removeClass('hidden');

                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");

                    } else if (response === "DataNotValid") {

                        $("#AddChildModal #ERROR_Data").removeClass("hidden");
                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");

                    } else if (response === "DateNotValid") {

                        $("#AddChildModal #Date-valid").removeClass("hidden");
                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");

                    } else {

                        $('#AddChildModal').modal('hide');
                        $(".modal-backdrop:last").remove();
                        $('#AddChildModal-body').empty();
                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");
                        $(".k-pager-refresh")[0].click();

                    }
                } else {

                    $("#AddChildModal #ERROR_SomeThingWentWrong").removeClass("hidden");
                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                }
            }
        });
    }

    function closeAddChildModal() {

        $('#AddChildModal').modal('hide');
        $('#AddChildModal-body').empty();
        $(".modal-backdrop:last").remove();

    }

</script>