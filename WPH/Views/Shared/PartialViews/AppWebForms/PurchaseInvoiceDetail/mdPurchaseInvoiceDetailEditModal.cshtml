        function CurrencyIdChange(e) {
            var dataItem = this.dataItem(e.item);

            var sellingCurrencyId = $("#SellingCurrencyId").data("kendoDropDownList");
            sellingCurrencyId.value(dataItem.Id);
            ResetSellingCurrency();

            var wholeSellCurrencyId = $("#WholeSellCurrencyId").data("kendoDropDownList");
            wholeSellCurrencyId.value(dataItem.Id);
            ResetWholeSellCurrency();


            var middleSellCurrencyId = $("#MiddleSellCurrencyId").data("kendoDropDownList");
            middleSellCurrencyId.value(dataItem.Id);
            ResetMiddleSellCurrency();
        }

        function SellingCurrencyIdChange(e) {
            var dataItem = this.dataItem(e.item);
            var currency = $("#CurrencyId").val();
            if (dataItem.Id == currency) {
                ResetSellingCurrency();
            } else {

                $(".loader").removeClass("hidden");
                $.ajax({
                    type: "Get",
                    url: "/MoneyConvert/GetLatestMoneyConverts",
                    data: {
                        baseCurrencyId: currency,
                        destCurrencyId: dataItem.Id
                    },
                    success: function (response) {

                        var moneyConvert = $("#SellingFactorId").data("kendoDropDownList");
                        moneyConvert.dataSource.data(response);
                        moneyConvert.value('');
                        moneyConvert.trigger("change");

                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");
                    }
                });
            }
        }

