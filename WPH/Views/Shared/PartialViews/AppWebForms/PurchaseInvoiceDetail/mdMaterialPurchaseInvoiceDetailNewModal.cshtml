        selectOnFocus: true
    });

    $("#DetailDiscount").kendoNumericTextBox({
        culture: "en-US",
        format: "#.##",
        min: 0,
        max: 100,
        value: 0,
        selectOnFocus: true
    });
</script>

<script>

    var product_list = [];
    var updated = false;

    $(document).ready(function () {

        $('#Num').data("kendoNumericTextBox").value($("#NumTxt").val());
        $('#PurchasePrice').data("kendoNumericTextBox").value($("#PurchasePriceTxt").val());
        $('#DiscountSharp').data("kendoNumericTextBox").value($("#DiscountTxt").val());
        $('#WholePurchasePrice').data("kendoNumericTextBox").value($("#WholePurchasePriceTxt").val());

        GetAllMaterialProductList().done(function (data) { 

            product_list = data;
        });

        setTimeout(function () {
            $('#CurrencyId').data("kendoDropDownList").focus();
            SetDiscount();
        }, 200);

    });

    $("#CurrencyId").parent().on("keypress", function (e) {
        if (e.which === 13) {
            $('#ProductId').data("kendoDropDownList").focus();
        }
    });
    
    $("#ProductId").parent().on("keypress", function (e) {
        if (e.which === 13) {
            $('#Num').data("kendoNumericTextBox").focus();
        }
    });

    $("#Num").on("keypress", function (e) {
        if (e.which === 13) {

            $('#PurchasePrice').data("kendoNumericTextBox").focus();
        }
    });

    $("#Num").focusout(function () {

        var count = $('#Num').val();
        var whole = $('#PurchasePrice').val();
        var price = whole * count;

        if (price) {
            var purchase = $('#WholePurchasePrice').data("kendoNumericTextBox");
            purchase.value(price);
        }
    });

    $("#Num").on("focus", function (e) {
        $('#Num').select();
    });

    $("#PurchasePrice").on("keypress", function (e) {
        if (e.which === 13) {
            $('#WholePurchasePrice').data("kendoNumericTextBox").focus();
        }
    });

    $("#PurchasePrice").on("focus", function (e) {
        $('#PurchasePrice').select();
    });

    $("#PurchasePrice").focusout(function () {

        var count = $('#Num').val();
        var whole = $('#PurchasePrice').val();
        var price = whole * count;

        if (price) {
            var purchase = $('#WholePurchasePrice').data("kendoNumericTextBox");
            purchase.value(price);
        }
    });

    $("#WholePurchasePrice").focusout(function () {
        var count = $('#Num').val();
        var whole = $('#WholePurchasePrice').val();
        var price = whole / count;

        if (price) {
            var purchase = $('#PurchasePrice').data("kendoNumericTextBox");
            purchase.value(price);

        }
    });

    $("#WholePurchasePrice").on("keypress", function (e) {
        if (e.which === 13) {
            $('#DetailDiscount').data("kendoNumericTextBox").focus();

        }
    });

    $("#WholePurchasePrice").on("focus", function (e) {
        $('#WholePurchasePrice').select();
    });

    $("#DetailDiscount").on("keypress", function (e) {
        if (e.which === 13) {
            //$('#DiscountSharp').data("kendoNumericTextBox").focus();
            $('#Consideration').focus();
        }
    });

    $("#DetailDiscount").on("focus", function (e) {
        $('#DetailDiscount').select();
    });

    $("#DetailDiscount").focusout(function () {
        SetDiscountSharp();
    });

    function SetDiscountSharp() {
        let wholepur = $('#WholePurchasePrice').data("kendoNumericTextBox").value();
        if (wholepur > 0) {
            let dis = $('#DetailDiscount').data("kendoNumericTextBox").value();
            let amount = (dis * wholepur) / 100;
            $('#DiscountSharp').data("kendoNumericTextBox").value(amount);

            $('#TotalAfterDiscount').val(wholepur - amount);
        }
    }

    $("#DiscountSharp").focusout(function () {
        SetDiscount();
    });

    function SetDiscount() {
        let wholepur = $('#WholePurchasePrice').data("kendoNumericTextBox").value();
        if (wholepur > 0) {
            let dis = $('#DiscountSharp').data("kendoNumericTextBox").value();
            let amount = (100 * dis) / wholepur;
            $('#DetailDiscount').data("kendoNumericTextBox").value(amount);

            $('#TotalAfterDiscount').val(wholepur - dis);
        }
    }

    $("#Consideration").on("keypress", function (e) {
        if (e.which === 13) {
            $('#btn-AddPurchaseInvoiceDetailModal-okAndNew').focus();
        }
    });
    
    $("#btn-AddPurchaseInvoiceDetailModal-okAndNew").on("keypress", function (e) {
        
        if (e.which === 37) {
            $('#btn-AddPurchaseInvoiceDetailModal-accept').focus();
        }
    });
    
    $("#btn-AddPurchaseInvoiceDetailModal-accept").on("keypress", function (e) {
        if (e.which === 37) {
            $('#btn-AddPurchaseInvoiceDetailModal-close').focus();
        }

        if (e.which === 39) {
            $('#btn-AddPurchaseInvoiceDetailModal-okAndNew').focus();
        }
    });
    
    $("#btn-AddPurchaseInvoiceDetailModal-close").on("keypress", function (e) {
        if (e.which === 39) {
            $('#btn-AddPurchaseInvoiceDetailModal-accept').focus();
        }
    });

    function NewProduct() {
        $("#AddNewProductModal #ERROR_Barcode").addClass("hidden");
        $("#AddNewProductModal #ERROR_Data").addClass("hidden");
        $("#AddNewProductModal #ERROR_SomeThingWentWrong").addClass("hidden");

        var link = `/MaterialStoreroom/AddAndNewModal`;
        $(".loader").removeClass("hidden");


        $('#AddNewProductModal').modal('toggle');
        $('#AddNewProductModal-body').load(link + '', function () {
            $(".loader").fadeIn("slow");
            $(".loader").addClass("hidden");
        });

    }

    $("#btn-AddNewProduct-accept").click(function () {
        $(this).attr("disabled", true);

        $("#AddNewProductModal #ERROR_Barcode").addClass("hidden");
        $("#AddNewProductModal #ERROR_Data").addClass("hidden");
        $("#AddNewProductModal #ERROR_SomeThingWentWrong").addClass("hidden");

        $('#AddNewProductModal .emptybox').addClass('hidden');
        var isEmmpty = true;
        $('#AddNewProductModal .emptybox').each(function () {
            if ($(this).attr('data-isEssential') === 'true') {
                var empty = $(this).attr('id');
                if ($('[data-checkEmpty="' + empty + '"]').val() === "") {
                    $(this).removeClass('hidden');
                    isEmmpty = false;
                    $('#btn-AddNewProduct-accept').removeAttr("disabled");
                    return;
                }
            }
        });

        if (isEmmpty === false) {
            return;
        }

        var link = "/MaterialStoreroom/AddOrUpdate";

        var product = $("#AddNewProductModal #addNewProductForm").serialize();

        $(".loader").removeClass("hidden");
        $.ajax({
            type: "Post",
            url: link,
            data: product,
            success: function (response) {
                $('#btn-AddNewProduct-accept').removeAttr("disabled");

                if (response !== 0) {
                    if (response === "ValueIsRepeated") {

                        $('#ProductName-Exist').removeClass('hidden');

                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");

                    } else if (response === "DataNotValid") {

                        $("#AddNewProductModal #ERROR_Data").removeClass("hidden");
                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");

                    } else if (response === "RepeatedBarcode") {

                        $("#AddNewProductModal #ERROR_Barcode").removeClass("hidden");
                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");

                    } else {

                        $('#AddNewProductModal').modal('hide');
                        $(".modal-backdrop:last").remove();
                        $('#AddNewProductModal-body').empty();
                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");

                        $("#ProductId").data("kendoDropDownList").dataSource.read();
                        let pr = $("#ProductId").data("kendoDropDownList");
                        pr.bind("dataBound", function () {
                            pr.value(response);
                        });

                        GetAllMaterialProductList().done(function (data) {
                            product_list = data;
                        });

                    }
                } else {

                    $("#AddNewProductModal #ERROR_SomeThingWentWrong").removeClass("hidden");
                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                }
            }
        });
    })

    function closeAddNewProductModal() {

        $('#AddNewProductModal').modal('hide');
        $(".modal-backdrop:last").remove();
        $('#AddNewProductModal-body').empty();
    }

</script>
