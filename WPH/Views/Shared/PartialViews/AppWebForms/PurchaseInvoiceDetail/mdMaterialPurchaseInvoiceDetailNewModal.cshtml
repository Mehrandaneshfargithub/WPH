    <script>

        function FilterProductItems(e) {
            e.preventDefault();

            var txt = e.filter.value;
            var filter_list = FilterProductLists(product_list, txt);

            $("#ProductId").data("kendoDropDownList").dataSource.data(filter_list);
        }

        function CurrencyIdOpen() {

            var currency = $("#CurrencyId").val();
            $("#last_currency_id").val(currency);
        }

        function CurrencyIdChange(e) {
            var dataItem = this.dataItem(e.item);
            let main_currency = dataItem.Id;
            var last = $("#last_currency_id").val();

            if (main_currency == last) {
                return;
            }

            $(".loader").removeClass("hidden");
            $.ajax({
                type: "Get",
                url: "/MoneyConvert/GetMoneyConvertBaseCurrencies",
                data: {
                    baseCurrencyId: last,
                    destCurrencyId: main_currency
                },
                success: function (response) {

                    if (response == null) {

                        bootbox.alert({
                            message: " @Localizer["ThereIsNoMoneyConvert"]",
                            className: 'bootbox-class'
                        });

                    } else if (response === 0) {

                        bootbox.alert({
                            message: " @Localizer["SomeThingWentWrong"]",
                            className: 'bootbox-class'
                        });

                    } else {

                        let Num = $("#Num").data("kendoNumericTextBox");
                        let PurchasePrice = $("#PurchasePrice").data("kendoNumericTextBox");
                        let WholePurchasePrice = $("#WholePurchasePrice").data("kendoNumericTextBox");

                        let base_currency = response.BaseCurrencyId;
                        let dest_currency = response.DestCurrencyId;
                        let base_amount = Number(response.BaseAmount);
                        let dest_amount = Number(response.DestAmount);

                        let fact = 1;
                        if (main_currency == base_currency) {

                            fact = base_amount / dest_amount;

                        } else if (main_currency == dest_currency) {

                            fact = dest_amount / base_amount;
                        }

                        let pp = PurchasePrice.value() * fact;
                        PurchasePrice.value(pp);
                        WholePurchasePrice.value(Num.value() * pp);
                        setTimeout(function () {
                            SetDiscountSharp();
                        }, 200);
                    }

                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                }
            });
        }


