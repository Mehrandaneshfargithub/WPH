<script>

    function SetSubsystemAccess(element) {

        $("#SetSubsystemAccessModal #ERROR_SomeThingWentWrong").addClass("hidden");
        $("#SetSubsystemAccessModal #ERROR_ThisRecordHasDependencyOnItInAnotherEntity").addClass("hidden");

        var link = "/Admin/SectionManagement/SubsystemAccessModal/";
        var Id = $(element).attr('data-id');

        $(".loader").removeClass("hidden");
        $('#SetSubsystemAccessModal').modal('toggle');
        $('#SetSubsystemAccessModal-body').load(link + Id, function () {
            $(".loader").fadeIn("slow");
            $(".loader").addClass("hidden");
        });

    }

    $('#btn-SetSubsystemAccessModal-accept').on("click", function () {
        $(this).attr("disabled", true);

        $("#SetSubsystemAccessModal #ERROR_SomeThingWentWrong").addClass("hidden");
        $("#SetSubsystemAccessModal #ERROR_ThisRecordHasDependencyOnItInAnotherEntity").addClass("hidden");

        var section_list = [];
        var access_list = [];
        var subSystemId = $("#SubSystemId").val();

        $('.sectionChValue:checkbox:checked').each(function () {
            let section = {
                SubSystemId: subSystemId,
                SectionTypeId: $(this).attr('data-id'),
                Checked: true
            };

            section_list.push(section);
        });

        $('.accessChValue:checkbox:checked').each(function () {
            let access = {
                SubSystemId: subSystemId,
                AccessId: $(this).attr('data-id'),
                Checked: true
            };

            access_list.push(access);
        });

        var link = "/Admin/SectionManagement/SetSubsystemAccess";
        var token = $(':input:hidden[name*="RequestVerificationToken"]');

        $(".loader").removeClass("hidden");
        $.ajax({
            type: "Post",
            url: link,
            data: {
                __RequestVerificationToken: token.attr('value'),
                subSystemId: subSystemId,
                accessList: access_list,
                sectionTypes: section_list,
            },
            success: function (response) {
                $('#btn-SetSubsystemAccessModal-accept').removeAttr("disabled");

                if (response === "ERROR_ThisRecordHasDependencyOnItInAnotherEntity") {

                    $("#SetSubsystemAccessModal #ERROR_ThisRecordHasDependencyOnItInAnotherEntity").removeClass("hidden");
                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");

                } else if (response === 1) {

                    $('#SetSubsystemAccessModal').modal('hide');
                    $(".modal-backdrop:last").remove();
                    $('#SetSubsystemAccessModal-body').empty();
                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");

                } else {

                    $("#SetSubsystemAccessModal #ERROR_SomeThingWentWrong").removeClass("hidden");
                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                }
            }
        });
    });


    function closeSetSubsystemAccessModal() {
        $('#SetSubsystemAccessModal').modal('toggle');
        $('#SetSubsystemAccessModal-body').empty();
    }


    function AddSubsystem(e) {
        $("#SubsystemModal #ERROR_Data").addClass("hidden");
        $("#SubsystemModal #ERROR_SomeThingWentWrong").addClass("hidden");
        $("#Mobile-wrong").addClass('hidden');

        //let header = $("#newHeader").text();
        //$('#SubsystemModal-header').text(header);
        var link = "/Admin/SectionManagement/AddNewModalSubsystem";

        $(".loader").removeClass("hidden");
        $('#SubsystemModal').modal('toggle');
        $('#SubsystemModal-body').load(link, function () {
            $(".loader").fadeIn("slow");
            $(".loader").addClass("hidden");
        });
    }

    function EditSubsystem(element) {
        $("#SubsystemModal #ERROR_Data").addClass("hidden");
        $("#SubsystemModal #ERROR_SomeThingWentWrong").addClass("hidden");

        //let header = $('#editHeader').text();
        //$('#SubsystemModal-header').text(header);

        var link = "/Admin/SectionManagement/EditModalSubsystem/";
        var Id = $(element).attr('data-id');
        $('#SubsystemModal').modal('toggle');

        $(".loader").removeClass("hidden");
        $('#SubsystemModal-body').load(link + Id + '', function () {
            $(".loader").fadeIn("slow");
            $(".loader").addClass("hidden");
        });
    }

    function SubsystemDeleteFunction(element) {
        $("#DeleteSubsystemModal #ERROR_ThisRecordHasDependencyOnItInAnotherEntity").addClass("hidden");
        $("#DeleteSubsystemModal #ERROR_SomeThingWentWrong").addClass("hidden");

        $(".loader").removeClass("hidden");
        $('#DeleteSubsystemModal').modal('toggle');
        var Id = $(element).attr('data-id');
        $('#btn-DeleteSubsystemModal-accept').attr('data-id', Id);
        $(".loader").fadeIn("slow");
        $(".loader").addClass("hidden");
    }

    $('#btn-DeleteSubsystemModal-accept').on("click", function () {
        $(this).attr("disabled", true);

        $("#DeleteSubsystemModal #ERROR_ThisRecordHasDependencyOnItInAnotherEntity").addClass("hidden");
        $("#DeleteSubsystemModal #ERROR_SomeThingWentWrong").addClass("hidden");

        var Id = $(this).attr('data-id');
        var link = "/Admin/SectionManagement/RemoveSubsystem";

        var token = $(':input:hidden[name*="RequestVerificationToken"]');
        $(".loader").removeClass("hidden");
        $.ajax({
            type: "Post",
            url: link,
            data: {
                __RequestVerificationToken: token.attr('value'),
                Id: Id
            },
            success: function (response) {
                $('#btn-DeleteSubsystemModal-accept').removeAttr("disabled");

                if (response === "SUCCESSFUL") {
                    $('#DeleteSubsystemModal').modal('hide');
                    $(".modal-backdrop:last").remove();

                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                    $("#subsystemsKendoGrid .k-pager-refresh")[0].click();
                }
                else if (response === "ERROR_ThisRecordHasDependencyOnItInAnotherEntity") {
                    $("#DeleteSubsystemModal #ERROR_ThisRecordHasDependencyOnItInAnotherEntity").removeClass("hidden");
                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                }
                else if (response === "ERROR_SomeThingWentWrong") {
                    $("#DeleteSubsystemModal #ERROR_SomeThingWentWrong").removeClass("hidden");
                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                }
                else if (response === "AreYouSure") {
                    AskForDelete(Id);
                }
                else if (response === "CanNotDelete") {
                    CanNotDelete();
                } else {
                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                }
            }
        });
    });

    $('#btn-SubsystemModal-accept').on("click", function () {
        $(this).attr("disabled", true);

        $("#SubsystemModal #ERROR_Data").addClass("hidden");
        $("#SubsystemModal #ERROR_SomeThingWentWrong").addClass("hidden");

        $('.emptybox').addClass('hidden');
        var isEmmpty = true;
        $('.emptybox').each(function () {
            if ($(this).attr('data-isEssential') === 'true') {
                var empty = $(this).attr('id');
                if ($('[data-checkEmpty="' + empty + '"]').val() !== undefined) {
                    let text = $('[data-checkEmpty="' + empty + '"]').val().replace(/ /g, '');
                    if (text === "") {
                        $(this).removeClass('hidden');
                        $('#btn-SubsystemModal-accept').removeAttr("disabled");
                        isEmmpty = false;
                        return;
                    }
                }
            }
        });

        if (isEmmpty === false) {
            return;
        }

        var data = $("#addNewSubsystemForm").serialize();
        var link = "/Admin/SectionManagement/AddOrUpdateSubsystem";

        $(".loader").removeClass("hidden");
        $.ajax({
            type: "Post",
            url: link,
            data: data,
            success: function (response) {
                $('#btn-SubsystemModal-accept').removeAttr("disabled");

                if (response !== 0) {
                    if (response === "ValueIsRepeated") {

                        $('#Name-Exist').removeClass('hidden');
                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");
                    } else if (response === "DataNotValid") {

                        $("#SubsystemModal #ERROR_Data").removeClass("hidden");
                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");

                    } else {

                        $('#SubsystemModal').modal('hide');
                        $(".modal-backdrop:last").remove();
                        $('#SubsystemModal-body').empty();
                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");
                        $("#subsystemsKendoGrid .k-pager-refresh")[0].click();

                    }
                } else {

                    $("#SubsystemModal #ERROR_SomeThingWentWrong").removeClass("hidden");
                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                }
            }
        });
    });


    function closeSubsystemModal() {
        $('#SubsystemModal').modal('toggle');
        $('#SubsystemModal-body').empty();
    }

    function ChangeSubsystemActive(element) {


        var Id = $(element).attr('data-id');

        var link = `/SectionManagement/ChangeSubsystemActivation/${Id}`;

        $(".loader").removeClass("hidden");
        $.ajax({
            type: "Get",
            url: link,
            //data: data,
            success: function (response) {
                if (response !== 0) {

                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                    $("#subsystemsKendoGrid .k-pager-refresh")[0].click();

                } else {
                    bootbox.alert({
                        message: '@Localizer["ERROR_InsertWrong"]',
                        className: 'bootbox-class'
                    });

                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                }
            }
        });
    }

    function AddAdminAccess() {
        
        var link = "/Admin/SectionManagement/AccessModal";

        $(".loader").removeClass("hidden");
        $('#AdminAccessModal').modal('toggle');
        $('#AdminAccessModal-body').load(link, function () {
            $(".loader").fadeIn("slow");
            $(".loader").addClass("hidden");
        });
    }

    $('#btn-AdminAccessModal-accept').on('click', function () {

        $(".loader").removeClass("hidden");
        var checkedIds = tree.getCheckedNodes();
        var UserId = $("#user-id").attr("data-Value");
        var clinicSectionId;
        if (clinicSectionDropDown !== undefined) {
            clinicSectionId = clinicSectionDropDown.value();
        }
        else {
            clinicSectionId = null;
        }
        $.ajax({
            url: '/Admin/SectionManagement/SaveCheckedNodes',
            data: {
                CheckedIds: checkedIds,
                UserId: UserId,
                ClinicSectionId: clinicSectionId
            },
            method: 'POST',
            success: function (response) {
                $('#AdminAccessModal').modal('toggle');
                $(".modal-backdrop:last").remove();
                $(".loader").fadeIn("slow");
                $(".loader").addClass("hidden");
            }
        });
    });

    function closeAdminAccessModal() {

        $('#AdminAccessModal').modal('hide');
        $(".modal-backdrop:last").remove();
        $('#AdminAccessModal-body').empty();
    }

</script>