<script>

    function AddSection(element) {
        $("#AddSectionModal #ERROR_SomeThingWentWrong").addClass("hidden");

        var link2 = "/Admin/SectionManagement/AddNewModalSection";
        $(".loader").removeClass("hidden");
        //let header = $("#newHumanText").text();
        let header = 'Add New Section';
        $('#AddSectionModal-header').text(header);
        $('#AddSectionModal').modal('toggle');

        $('#AddSectionModal-body').load(link2, function () {
            $(".loader").fadeIn("slow");
            $(".loader").addClass("hidden");
        });
    }

    function AddClinicSection(element) {

        $("#AddClinicSectionModal #ERROR_SomeThingWentWrong").addClass("hidden");
        $("#AddClinicSectionModal #ERROR_Data").addClass("hidden");
        $("#AddClinicSectionModal #ERROR_Money").addClass("hidden");
        $('#Name-Exist').addClass('hidden');

        var link3 = "/Admin/SectionManagement/AddNewModalClinicSection";
        $(".loader").removeClass("hidden");
        //let header = $("#newHumanSalaryText").text();
        let header = 'Add New ClinicSection';
        $('#AddClinicSectionModal-header').text(header);
        $('#AddClinicSectionModal').modal('toggle');

        $('#AddClinicSectionModal-body').load(link3, function () {
            $(".loader").fadeIn("slow");
            $(".loader").addClass("hidden");

        });
    }


    function closeAddSectionModal() {

        $('#AddSectionModal').modal('hide');
        $('#AddSectionModal-body').empty();
        $(".modal-backdrop:last").remove();
    }

    function closeAddClinicSectionModal() {

        $('#AddClinicSectionModal').modal('hide');
        $('#AddClinicSectionModal-body').empty();
        $(".modal-backdrop:last").remove();
    }

    function EditSection(element) {
        $('#AddSectionModal').modal('toggle');
        //let header = $('#editHumanText').text();
        let header = 'Edit Section';

        $('#AddSectionModal-header').text(header);
        var link = "/Admin/SectionManagement/EditModalSection?Id=";
        var Id = $(element).attr('data-id');
        $(".loader").removeClass("hidden");

        $('#AddSectionModal-body').load(link + Id + '', function () {
            $(".loader").fadeIn("slow");
            $(".loader").addClass("hidden");
            $('#MdName').select();
        });
    }


    function EditClinicSection(element) {
        $('#AddClinicSectionModal').modal('toggle');
        //let header = $('#editHumanText').text();
        let header = 'Edit ClinicSection';

        $('#AddClinicSectionModal-header').text(header);
        var link = "/Admin/SectionManagement/EditModalClinicSection?Id=";
        var Id = $(element).attr('data-id');
        $(".loader").removeClass("hidden");

        $('#AddClinicSectionModal-body').load(link + Id + '', function () {
            $(".loader").fadeIn("slow");
            $(".loader").addClass("hidden");
            $('#MdName').select();
        });
    }



    $('#btn-addSection-accept').on("click", function () {
        $(this).attr("disabled", true);

        $("#AddSectionModal #ERROR_Data").addClass("hidden");
        $("#AddSectionModal #ERROR_SomeThingWentWrong").addClass("hidden");
        $("#AddSectionModal #Name-Exist").addClass("hidden");

        $('.emptybox').addClass('hidden');
        var isEmmpty = true;
        $('#AddSectionModal  .emptybox').each(function () {
            if ($(this).attr('data-isEssential') === 'true') {
                var empty = $(this).attr('id');
                if ($('[data-checkEmpty="' + empty + '"]').val() !== undefined) {
                    let text = $('[data-checkEmpty="' + empty + '"]').val().replace(/ /g, '');
                    if (text === "") {
                        $(this).removeClass('hidden');
                        $('#btn-addSection-accept').removeAttr("disabled");
                        isEmmpty = false;
                        return;
                    }
                }
            }
        });

        if (isEmmpty === false) {
            return;
        }

        var data = $("#addNewSectionForm").serialize();
        var link = "/Admin/SectionManagement/AddOrUpdateSection";

        $(".loader").removeClass("hidden");
        $.ajax({
            type: "Post",
            url: link,
            data: data,
            success: function (response) {
                $('#btn-addSection-accept').removeAttr("disabled");

                if (response !== 0) {
                    if (response === "ValueIsRepeated") {

                        $('#AddSectionModal #Name-Exist').removeClass('hidden');
                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");
                    } else if (response === "DataNotValid") {

                        $("#AddSectionModal #ERROR_Data").removeClass("hidden");
                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");
                    } else {

                        $('#AddSectionModal').modal('hide');
                        $(".modal-backdrop:last").remove();
                        $('#AddSectionModal-body').empty();
                        $(".loader").fadeIn("slow");
                        $(".loader").addClass("hidden");
                        $("#sectionsKendoGrid .k-pager-refresh")[0].click();
                        $("#SectionType").data("kendoDropDownList").dataSource.read();
                    }
                } else {

                    $("#AddSectionModal #ERROR_SomeThingWentWrong").removeClass("hidden");
                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                }
            }
        });
    });


    $('#btn-addClinicSection-accept').on("click", function () {
        $(this).attr("disabled", true);

        $("#AddClinicSectionModal #ERROR_Data").addClass("hidden");
        $("#AddClinicSectionModal #ERROR_SomeThingWentWrong").addClass("hidden");
        $("#AddClinicSectionModal #Name-Exist").addClass("hidden");

        $('.emptybox').addClass('hidden');
        var isEmmpty = true;
        $('#AddClinicSectionModal .emptybox').each(function () {
            if ($(this).attr('data-isEssential') === 'true') {
                var empty = $(this).attr('id');
                if ($('[data-checkEmpty="' + empty + '"]').val() !== undefined) {
                    let text = $('[data-checkEmpty="' + empty + '"]').val().replace(/ /g, '');
                    if (text === "") {
                        $(this).removeClass('hidden');
                        $('#btn-addClinicSection-accept').removeAttr("disabled");
                        isEmmpty = false;
                        return;
                    }
                }
            }
        });

        if (isEmmpty === false) {
            return;
        }

        var data = $("#addNewClinicSectionForm").serialize();
        var link = "/Admin/SectionManagement/AddOrUpdateClinicSection";

        $(".loader").removeClass("hidden");
        $.ajax({
            type: "Post",
            url: link,
            data: data,
            success: function (response) {
                $('#btn-addClinicSection-accept').removeAttr("disabled");

                if (response === "ValueIsRepeated") {

                    $('#AddClinicSectionModal #Name-Exist').removeClass('hidden');

                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                } else if (response === "DataNotValid") {

                    $("#AddClinicSectionModal #ERROR_Data").removeClass("hidden");
                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                } else if (response === "SomeThingWentWrong") {

                    $("#AddClinicSectionModal #ERROR_SomeThingWentWrong").removeClass("hidden");
                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                } else {

                    $('#AddClinicSectionModal').modal('hide');
                    $(".modal-backdrop:last").remove();
                    $('#AddClinicSectionModal-body').empty();
                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                    $("#clinicSectionsKendoGrid .k-pager-refresh")[0].click();
                }

            }
        });
    });


    function SectionDeleteFunction(element) {

        $("#DeleteSectionModal #ERROR_ThisRecordHasDependencyOnItInAnotherEntity").addClass("hidden");
        $("#DeleteSectionModal #ERROR_SomeThingWentWrong").addClass("hidden");

        $(".loader").removeClass("hidden");
        $('#DeleteSectionModal').modal('toggle');
        var Id = $(element).attr('data-id');
        $('#btn-DeleteSectionModal-accept').attr('data-id', Id);
        $(".loader").fadeIn("slow");
        $(".loader").addClass("hidden");
    }

    $('#btn-DeleteSectionModal-accept').on("click", function () {
        $(this).attr("disabled", true);

        $("#DeleteSectionModal #ERROR_ThisRecordHasDependencyOnItInAnotherEntity").addClass("hidden");
        $("#DeleteSectionModal #ERROR_SomeThingWentWrong").addClass("hidden");

        var Id = $(this).attr('data-id');

        var link = "/Admin/SectionManagement/RemoveSection";

        var token = $(':input:hidden[name*="RequestVerificationToken"]');
        $(".loader").removeClass("hidden");
        $.ajax({
            type: "Post",
            url: link,
            data: {
                __RequestVerificationToken: token.attr('value'),
                Id: Id
            },
            success: function (response) {
                $('#btn-DeleteSectionModal-accept').removeAttr("disabled");

                if (response === "SUCCESSFUL") {
                    $('#DeleteSectionModal').modal('hide');
                    $(".modal-backdrop:last").remove();

                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                    $("#sectionsKendoGrid .k-pager-refresh")[0].click();
                    $("#SectionType").data("kendoDropDownList").dataSource.read();
                }
                else if (response === "ERROR_ThisRecordHasDependencyOnItInAnotherEntity") {
                    $("#DeleteSectionModal #ERROR_ThisRecordHasDependencyOnItInAnotherEntity").removeClass("hidden");
                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                }
                else if (response === "ERROR_SomeThingWentWrong") {
                    $("#DeleteSectionModal #ERROR_SomeThingWentWrong").removeClass("hidden");
                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                }
                else if (response === "AreYouSure") {
                    AskForDelete(Id);
                }
                else if (response === "CanNotDelete") {
                    CanNotDelete();
                } else {
                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                }
            }
        });
    });


    function ClinicSectionDeleteFunction(element) {

        $("#DeleteClinicSectionModal #ERROR_ThisRecordHasDependencyOnItInAnotherEntity").addClass("hidden");
        $("#DeleteClinicSectionModal #ERROR_SomeThingWentWrong").addClass("hidden");

        $(".loader").removeClass("hidden");
        $('#DeleteClinicSectionModal').modal('toggle');
        var Id = $(element).attr('data-id');
        $('#btn-DeleteClinicSectionModal-accept').attr('data-id', Id);
        $(".loader").fadeIn("slow");
        $(".loader").addClass("hidden");
    }

    $('#btn-DeleteClinicSectionModal-accept').on("click", function () {
        $(this).attr("disabled", true);

        $("#DeleteClinicSectionModal #ERROR_ThisRecordHasDependencyOnItInAnotherEntity").addClass("hidden");
        $("#DeleteClinicSectionModal #ERROR_SomeThingWentWrong").addClass("hidden");

        var Id = $(this).attr('data-id');

        var link = "/Admin/SectionManagement/RemoveClinicSection";

        var token = $(':input:hidden[name*="RequestVerificationToken"]');
        $(".loader").removeClass("hidden");
        $.ajax({
            type: "Post",
            url: link,
            data: {
                __RequestVerificationToken: token.attr('value'),
                Id: Id
            },
            success: function (response) {
                $('#btn-DeleteClinicSectionModal-accept').removeAttr("disabled");

                if (response === "SUCCESSFUL") {
                    $('#DeleteClinicSectionModal').modal('hide');
                    $(".modal-backdrop:last").remove();

                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                    $("#clinicSectionsKendoGrid .k-pager-refresh")[0].click();
                }
                else if (response === "ERROR_ThisRecordHasDependencyOnItInAnotherEntity") {
                    $("#DeleteClinicSectionModal #ERROR_ThisRecordHasDependencyOnItInAnotherEntity").removeClass("hidden");
                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                }
                else if (response === "ERROR_SomeThingWentWrong") {
                    $("#DeleteClinicSectionModal #ERROR_SomeThingWentWrong").removeClass("hidden");
                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                }
                else if (response === "AreYouSure") {
                    AskForDelete(Id);
                }
                else if (response === "CanNotDelete") {
                    CanNotDelete();
                } else {
                    $(".loader").fadeIn("slow");
                    $(".loader").addClass("hidden");
                }
            }
        });
    });

</script>