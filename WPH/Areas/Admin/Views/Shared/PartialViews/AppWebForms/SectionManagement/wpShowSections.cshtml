@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@inject WPH.Resources.SharedViewLocalizer Localizer


<div class="row k-d-flex k-flex-row  k-justify-content-around ">
    <div class="col-sm-5">

        <div class="row page-header ">

            <div class=" pull-left  ">
                <h1 class=" MyFont-Roboto-grid " style="font-size: 2.3rem">
                    Sections
                </h1>

            </div>

            <div class=" MyFont-Roboto-grid   pull-left  " style="margin:0 2rem;transform:translateY(-10%)">
                <a class="btn btn-danger" onClick="AddSection(this)" href="#" style="padding:0.2rem">
                    New
                    <i class="ace-icon glyphicon  glyphicon-plus align-top bigger-125"></i>
                </a>
            </div>

        </div>

        <div class="row Grid-Content  MyFont-Roboto-grid ">
            @await Html.PartialAsync("~/Areas/Admin/Views/Shared/PartialViews/AppWebForms/SectionManagement/dgSectionsGrid.cshtml")
        </div>

    </div>

    <div class="clearfix"></div>
    <div class="col-sm-6">

        <div class=" row page-header ">

            <div class=" pull-left ">
                <h1 class=" MyFont-Roboto-grid " style="font-size: 2.3rem">
                    Clinic Sections
                </h1>

            </div>

            <div class=" MyFont-Roboto-grid   pull-left  " style="margin:0 2rem;transform:translateY(-10%)">
                <a class="btn btn-danger" onClick="AddClinicSection(this)" href="#" style="padding:0.2rem">
                    New
                    <i class="ace-icon glyphicon  glyphicon-plus align-top bigger-125"></i>
                </a>
            </div>

        </div>

        <input type="hidden" id="GetSectionTypeId" data-id="0" />

        <script>
            function onSelectClinicSection() {

                $("#clinicSectionsKendoGrid .k-pager-refresh")[0].click();

                var grid = $("#clinicSectionsKendoGrid").data("kendoGrid");
                grid.dataSource.page(1);
            }

            function GetSectionTypeForClinicSection() {

                return {

                    sectionTypeId: $("#SectionType").val(),
                };
            }

        </script>

        <div class="row Grid-Content MyFont-Roboto-grid">

            <div class="clo-sm-12" style="overflow:hidden;">
                <div class=" col-sm-3">
                    <label class="block MyFont-Roboto-grid clearfix">
                        <span class="block input-icon input-icon-right">
                            @(Html.Kendo().DropDownList()
                            .Name("SectionType")
                            .OptionLabel(" ")
                            .DataTextField("Name")
                            .DataValueField("Id")
                            .DataSource(source =>
                            {
                                source.Read(read =>
                                {
                                    read.Action("GetAllSectionNames", "SectionManagement", new { area = "Admin" });
                                })
                                .ServerFiltering(false);
                            })
                            .Events(e =>
                            {
                                e.Change("onSelectClinicSection");
                            })
                            .HtmlAttributes(new { @style = "font-size:1.5rem; width:100%" })
                            )
                        </span>
                    </label>
                </div>
            </div>

            <div class="clo-sm-12">

                @await Html.PartialAsync("~/Areas/Admin/Views/Shared/PartialViews/AppWebForms/SectionManagement/dgClinicSectionsGrid.cshtml")
            </div>

        </div>

    </div>


</div>

<div id="AddSectionModal" class="modal fade  MyFont-Roboto-grid " data-backdrop="static" data-keyboard="false" style="">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="closeAddSectionModal()" aria-hidden="true">&times;</button>
                <h3 id="AddSectionModal-header" class="smaller lighter blue no-margin  MyFont-Roboto-grid ">
                </h3>
            </div>
            <div id="AddSectionModal-body" style="width:40vw" class="modal-body  MyFont-Roboto-grid ">
            </div>

            <div id="ERROR_SomeThingWentWrong" class="red label-white middle hidden" style="height:40px;display:block">
                <i class="ace-icon fa fa-stop bigger-120"></i>
                @Localizer["ERROR_InsertWrong"]
            </div>

            <div id="ERROR_Data" class="red label-white middle hidden" style="height:40px;display:block">
                <i class="ace-icon fa fa-stop bigger-120"></i>
                @Localizer["ERROR_DataNotValid"]
            </div>

            <div class="modal-footer">

                @(Html.Kendo().Button()
                        .Name("btn-addSection-accept")
                        .HtmlAttributes(new { style = "font-size:15px;height:35px;margin:2px;", type = "button", @class = "k-primary pull-right" })
                        .Content(Localizer["Ok"]))
                @(Html.Kendo().Button()
                        .Name("btn-addSection-close")
                        .HtmlAttributes(new { style = "font-size:15px;height:35px;margin:2px;", type = "button", @class = "pull-right", onclick = "closeAddSectionModal()" })
                        .Content(Localizer["Exit"]))

            </div>
        </div>
    </div>
</div>

